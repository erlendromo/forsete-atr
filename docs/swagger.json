{
    "swagger": "2.0",
    "info": {
        "description": "RESTful JSON-API for Automatic Text Recognition (ATR) developed as part of Bachelor Thesis \"FORSETE\" at NTNU Gj√∏vik.",
        "title": "Forsete-ATR",
        "contact": {},
        "version": "v1"
    },
    "paths": {
        "/forsete-atr/v1/atr/basic-documents/": {
            "post": {
                "description": "ATR",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Run ATR on image-file",
                "parameters": [
                    {
                        "type": "file",
                        "description": "imagefile (png)",
                        "name": "image",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "chosen line segmentation model",
                        "name": "line_segmentation_model",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "chosen text recognition model",
                        "name": "text_recognition_model",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/util.ErrorResponse"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/util.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/util.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "util.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                }
            }
        }
    }
}